{% extends 'base.html.twig' %}

{% block title %}Hello AudytorController!{% endblock %}

{% block body %}
<div class="bg-gray-800 pt-3">
                <div class="rounded-tl-3xl bg-gradient-to-r from-blue-900 to-gray-800 p-4 shadow text-2xl text-white">
                    <h3 class="font-bold pl-2">Audytor SEO</h3>
                </div>  
</div>
<div class="container mx-auto my-8">
            
            {{ form_start(form, {'attr': {'class': 'm-4 flex'}}) }}
            
                    {{ form_widget(form.url, {'attr': {'class': 'text-lg font-bold rounded-l-lg p-4 border-t mr-0 border-b border-l text-gray-800 border-gray-200 bg-white w-3/4', 'placeholder': 'Adres URL'}}) }}
                    <button type="submit" class="text-lg px-8 rounded-r-lg bg-blue-800  text-white font-bold p-4 uppercase border-blue-900 border-t border-b border-r w-1/4">Audytuj</button>

            {{ form_end(form) }}
            {% for message in app.flashes('error') %}
                <div class="bg-red-500 text-white px-4 py-2 mt-4 rounded">
                    {{ message }}
                </div>
            {% endfor %}

</div>
{% endblock %}
